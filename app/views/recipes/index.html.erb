<h1>Recipes for <%= @search %></h1>
<table>
	<tr>
		<th>Photo</th>
		<th>Title</th>
		<th>Ingredients</th>
	</tr>
	 <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= link_to image_tag(recipe["thumbnail"], size: "100x100"), recipe["href"] %></td>
      <td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
      <td><%= recipe["ingredients"] %></td>
    </tr>
  <% end %>
</table>